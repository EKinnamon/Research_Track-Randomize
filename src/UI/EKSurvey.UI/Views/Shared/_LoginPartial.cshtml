@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav">
        <li class="nav-item mr-5">
            <a href="@Url.Action("Index", "Manage")" title="Manage" class="btn btn-link nav-link">
                <i class="fa fa-user-circle"></i> @User.Identity.GetUserName()
            </a>
        </li>
        <li class="nav-item">
            <button class="btn btn-link nav-link align-text-top" type="submit">
                <i class="fa fa-sign-out"></i> Log off
            </button>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a href="@Url.Action("Login", "Account")" class="btn btn-link nav-link">
                <i class="fa fa-sign-in"></i> Log in
            </a>
        </li>
    </ul>
}
 