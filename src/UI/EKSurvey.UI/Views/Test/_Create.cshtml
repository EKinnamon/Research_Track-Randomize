@using EKSurvey.Core.Models.ViewModels.Test
@model CreateViewModel
@using (Html.BeginForm("Create", "Test", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.SurveyId)

    var formContext = ViewBag.FormContext ?? string.Empty;

    var buttonClass = formContext.Equals("table", StringComparison.OrdinalIgnoreCase)
        ? "btn-primary"
        : "btn-success btn-block";

    <button class="btn @buttonClass" type="submit">
        <i class="fa fa-check-square-o"></i>
        Begin @Model.SurveyName
    </button>
}
